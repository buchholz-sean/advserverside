extends layout

block content
    .container
        .jumbotron
            h1= title
            p Edit your Character Below
            hr
            form(action='/characters/edit/' + charToEdit.name, method='POST')
                .form-group
                    label(for='charName') Name
                    input.form-control(id='charName', type='text', name='charName', value=charToEdit.name, required)
                .form-group
                    label(for='charClass') Class
                    select.form-control(id='charClass', name='charClass', required)
                        each opt in classOpts
                            option(value=opt.value, selected=charToEdit.class==opt.text) #{opt.text}
                .form-group
                    a.btn.btn-secondary(href='/characters') &laquo; Cancel
                    | 
                    input.btn.btn-primary(type='submit', name='submit', value='Update!')
                if errmsg
                    span.alert.alert-danger= errmsg
